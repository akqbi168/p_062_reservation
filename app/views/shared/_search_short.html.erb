<%= search_form_for @q, url: property_path(@property) do |f| %>

  <div class="search_container">
    <div class="search_box">
      <h6>チェックイン：</h6>
      <% if params[:cid].present? %>
        <%= f.date_field :date_gteq, value: params[:cid], class: "search_box_form" %>
      <% else %>
        <%= f.date_field :date_gteq, class: "search_box_form" %>
      <% end %>
    </div>
    
    <div class="search_box">
      <h6>チェックアウト：</h6>
      <% if params[:cod].present? %>
        <%= f.date_field :date_lt, value: params[:cod], class: "search_box_form" %>
      <% else %>
        <%= f.date_field :date_lt, class: "search_box_form" %>
      <% end %>
    </div>

    <div class="search_box">
      <h6>人数：</h6>
      <%= f.select(:property_max_capacity_gteq, [1, 2, 3, 4, 5, 6, 7, 8, 9], {include_blank: true}, {class: "search_box_form narrow"}) %>
    </div>

      <%= f.hidden_field :property_name_or_property_introduction_cont_all, value: @property.name %>

    <%= f.submit '空室をチェック', class: "search_submit_btn" %>

  </div>

<% end %>
